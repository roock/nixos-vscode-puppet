source 'https://rubygems.org'

gem 'puppet'
gem 'pdk'
gem 'bolt'
# puppet language server might be incompatible with latest puppet-lint version
# https://github.com/puppetlabs/puppet-editor-services/issues/396
gem 'puppet-lint', '4.2.4'
gem 'voxpupuli-puppet-lint-plugins'
gem 'r10k'
gem 'ra10ke'
# required for net-ssh to support ssh ed25519 keys (only for bolt)
gem 'ed25519', '~> 1.2', '< 2.0'
gem 'bcrypt_pbkdf', '>= 1.0', '< 2.0'
# puppet-language-server requires older version of rubygem json
# https://github.com/puppetlabs/puppet-editor-services/pull/392
gem 'json', '2.7.6'
